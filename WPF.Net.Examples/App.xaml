<Application x:Class="WPF.Net.Examples.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:WPF.Net.Examples.Models"
             xmlns:viewModels="clr-namespace:WPF.Net.Examples.ViewModels"
             StartupUri="Views/WindowMain.xaml">
    <Application.Resources>
        <viewModels:AppSettings x:Key="AppSettings" ></viewModels:AppSettings>
        <models:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" TrueValue="Visible" FalseValue="Hidden" />
        <!-- Styles -->
        <Style x:Key="StyleButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <TextBlock 
                            Text="{TemplateBinding Content}" TextWrapping="Wrap" 
                               HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center"
                               Margin="5" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
